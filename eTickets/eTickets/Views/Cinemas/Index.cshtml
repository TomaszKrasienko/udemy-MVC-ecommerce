@*Define the model*@
@model IEnumerable<Cinema>

@*Define view data*@
@{
    ViewData["Title"] = "List of cinemas";
}
@*Write Code*@
<div class="row">
    <div class="col-md-8 offset-md-1">
        <table class="table">
            <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.Logo)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (Cinema item in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px"/>
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit button</a> |
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye "></i>Details</a> |
                        <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a> 
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div>